<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>To Do List</title>
</head>
<body>
    <header>
        <h1>To Do List</h1>
    </header>

    <aside class="form">
        <form action="/create" method="post">
            <input type="text" name="name" id="name" placeholder="Escreva aqui uma tarefa" required class="input">
            <input type="submit" value="Adicionar" class="submit" required>
        </form>
    </aside>

    <section>
        <ul>
            <% taskList.forEach((task) => { %>
            <li>
                <div class="div">
                    <p class="name"><%= task.name %></p>
                    <p class="delete"><a href="/delete/<%=task.id%>">Deletar</a></p>
                </div>
            </li>
            <% }) %>
        </ul>
    </section>
</body>
</html>